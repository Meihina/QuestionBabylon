{
	"compilerOptions": {
	  "target": "esnext",
	  "useDefineForClassFields": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "strict": true,
	  "jsx": "preserve",
	  "sourceMap": true,
	  "resolveJsonModule": true,
	  "esModuleInterop": true,
	  "lib": ["esnext", "dom"],
	  "allowJs": true,
	  "paths": {
		"@/*": [
		  "./*"
		]
	  }
	},
	"include": ["src/**/*.ts", "src/**/*.js"],
	"exclude": ["node_modules"]
  }
  